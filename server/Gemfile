source :gemcutter

# Gems required by Picky.
#
gem 'rake'
gem 'rack'
gem 'yajl-ruby', :require => 'yajl'
gem 'text'
gem 'rack_fast_escape'

group :test do
  # Needed for testing itself.
  #
  gem 'rspec-core'
  gem 'simplecov', :require => false # Will install simplecov-html as a dependency

  # Needed to test optional data sources etc.
  #
  gem 'www-delicious'
  gem 'rest-client'
  gem 'uuidtools'
  gem 'highline'
  gem 'picky-client'
  gem 'activerecord'
  gem 'redis'

  gem 'rack-mount'
end
