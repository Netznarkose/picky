!!!
%html{ :lang => 'en' }
  %head
    %link{ :href => 'stylesheets/statistics.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css' }/
    %script{ :src => 'javascripts/jquery-1.4.4.min.js', :type => 'text/javascript' }
    %script{ :src => 'javascripts/jquery.sparkline-1.6.min.js', :type => 'text/javascript' }
    %script{ :src => 'javascripts/d3/d3.min.js', :type => 'text/javascript' }
    %script{ :src => 'javascripts/d3/d3.layout.min.js', :type => 'text/javascript' }
    %script{ :src => 'javascripts/rickshaw.js', :type => 'text/javascript' }
    %script{ :src => 'javascripts/graph.js', :type => 'text/javascript' }

  %body
    %h1 Clam: Picky Statistics Interface.
    .actions
      %button{ :href => '#', :onclick => 'javascript:updateStatistics();' } Update now
      |
      %input{ :type => "radio", :name => "updating", :onclick => 'javascript:stopUpdatingStatistics();' } Don't update
      %input{ :type => "radio", :name => "updating", :onclick => 'javascript:updateStatisticsPeriodically(5);', :checked => 'checked' } Update every 5 seconds
      %input{ :type => "radio", :name => "updating", :onclick => 'javascript:updateStatisticsPeriodically(30);'} Update every 30 seconds
      %input{ :type => "radio", :name => "updating", :onclick => 'javascript:updateStatisticsPeriodically(600);'} Update every 5 minutes
    #full_live_graph.stats
      %h3 Full/Live
      .graph
      .legend
    #results_graph.stats
      %h3 Full Results
      .graph
      .legend
    #speed_graph.stats
      %h3 Full Performance
      .graph
      .legend
    #offset_graph.stats
      %h3 Full Offsets
      .graph
      .legend
    %script{ :src => 'javascripts/statistics.js', :type => 'text/javascript' }
  :javascript
    updateStatistics();
    updateStatisticsPeriodically(5);